<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_exitDialog"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp"
    android:background="@drawable/exi_dialog3"
    android:orientation="vertical" >
    
    <!-- <TextView 
        android:id="@+id/tv_alert"
        android:layout_width="match_parent"
        android:layout_height="26dp"
        android:text="提示"
        android:textSize="20sp"
        android:textColor="#CD5C5C"
        android:gravity="center"
        android:background="@drawable/btn1" /> -->
    
    
    <TextView 
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:gravity="center"
        android:text="您确定要退出游戏？"
        android:textColor="#FF6347"
        android:textSize="20sp"
         />
    
    <LinearLayout 
        android:layout_width="350dp"
        android:layout_height="60dp"
        android:layout_gravity="bottom"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="3"
         >

        <Button
            android:id="@+id/positionButton"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="60dp"
            android:background="@drawable/button_p_n"
            android:gravity="center"
            android:textColor="#C0C0C0"
            android:text="确定"
            android:textSize="18sp" />

        <Button
            android:id="@+id/negativeButton"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="60dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/button_n_p"
            android:gravity="center"
            android:text="取消"
            android:textColor="#C0C0C0"
            android:textSize="18sp" />

    </LinearLayout>

</LinearLayout>
